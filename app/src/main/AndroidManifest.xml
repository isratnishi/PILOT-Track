<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.opus_bd.pilot">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="ndroid.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activity.RequisitorActivity.CompleteTripActivity"></activity>
        <activity android:name=".Activity.RequisitorActivity.CancleReqActivity" />
        <activity android:name=".Activity.RequisitorActivity.OngoingReqLIstActivity" />
        <activity android:name=".Activity.RequisitorActivity.CouponBuyActivity" />
        <activity android:name=".Activity.RequisitorActivity.RequisatorHomeActivity" />
        <activity android:name=".Activity.RequisitorActivity.RequisationEntryActivity" />
        <activity
            android:name=".Activity.NewCheckINActivity"
            android:label="Check In" />
        <activity android:name=".Activity.PilotActivity.RouteActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".Activity.PilotActivity.MainActivity"
            android:label="Home" />
        <activity
            android:name=".Activity.CheckInActivity"
            android:label="Check In" />
        <activity
            android:name=".Activity.PendingSalesActivity"
            android:label="Pending List" />
        <activity android:name=".Activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>