<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/biwta_logo"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardBackgroundColor="#9C27B0"
        app:cardCornerRadius="14dp"
        app:cardElevation="5dp">

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="20dp"
            android:text="Welcome"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
    </android.support.v7.widget.CardView>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"

        >

        <android.support.v7.widget.CardView
            android:id="@+id/cvCheckIN"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_margin="30dp"
            app:cardBackgroundColor="#FF5252"
            app:cardCornerRadius="14dp"
            app:cardElevation="5dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="20dp"
                android:text="Pending Checkin"
                android:textColor="@android:color/white"
                android:textSize="15dp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cvCheckOUT"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_margin="30dp"
            app:cardBackgroundColor="#E040FB"
            app:cardCornerRadius="14dp"
            app:cardElevation="5dp">

            <TextView
android:id="@+id/tvCompleteTrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="20dp"
                android:text="Complete Trip"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cvRoute"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_margin="30dp"
            app:cardBackgroundColor="#FFAB40"
            app:cardCornerRadius="14dp"
            app:cardElevation="5dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="20dp"
                android:text="Route list"
                android:textColor="@android:color/white"
                android:textSize="15dp" />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/cvNewEntry"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_margin="30dp"
            app:cardBackgroundColor="#536DFE"
            app:cardCornerRadius="14dp"
            app:cardElevation="5dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="20dp"
                android:text="New Entry"
                android:textColor="@android:color/white"
                android:textSize="15dp" />
        </android.support.v7.widget.CardView>
    </GridLayout>


</LinearLayout>

</android.support.constraint.ConstraintLayout>