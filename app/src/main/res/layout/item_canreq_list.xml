<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="6dp"
    android:layout_margin="10dp"
    android:id="@+id/rootLayout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                style="@style/ItemPendingList"
                android:layout_weight="1"
                android:text="Ship No: "
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/tvshipNo"
                style="@style/ItemPendingList"
                android:layout_weight="2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                style="@style/ItemPendingList"
                android:layout_weight="1"
                android:text="Trip Start Date:"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/tvtripStartDate"
                style="@style/ItemPendingList"
                android:layout_weight="2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                style="@style/ItemPendingList"
                android:layout_weight="1"
                android:text="Start Port:"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/tvstartPort"
                style="@style/ItemPendingList"
                android:layout_weight="2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                style="@style/ItemPendingList"
                android:layout_weight="1"
                android:text="End Port:"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/tvendPort"
                style="@style/ItemPendingList"
                android:layout_weight="2" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>