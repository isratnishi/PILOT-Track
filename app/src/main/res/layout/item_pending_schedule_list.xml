<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                style="@style/ItemPendingList"
                android:layout_weight="1"
                android:text="Req No"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/tvreqNo"
                style="@style/ItemPendingList"
                android:layout_weight="2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                style="@style/ItemPendingList"
                android:layout_weight="1"
                android:text="Schedule No"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/tvscheduleNo"
                style="@style/ItemPendingList"
                android:layout_weight="2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                style="@style/ItemPendingList"
                android:layout_weight="1"
                android:text="Schedule Date"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/tvScheduleDate"
                style="@style/ItemPendingList"
                android:layout_weight="2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                style="@style/ItemPendingList"
                android:layout_weight="1"
                android:text="Pilot Name"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/tvpilotName"
                style="@style/ItemPendingList"
                android:layout_weight="2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                style="@style/ItemPendingList"
                android:layout_weight="1"
                android:text="Ship Name"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/tvShipName"
                style="@style/ItemPendingList"
                android:layout_weight="2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                style="@style/ItemPendingList"
                android:layout_weight="1"
                android:text="Group Name"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/tvgroupName"
                style="@style/ItemPendingList"
                android:layout_weight="2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                style="@style/ItemPendingList"
                android:layout_weight="1"
                android:text="Start Port"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/tvstartPort"
                style="@style/ItemPendingList"
                android:layout_weight="2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                style="@style/ItemPendingList"
                android:layout_weight="1"
                android:text="End Port"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/tvendPort"
                style="@style/ItemPendingList"
                android:layout_weight="2" />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>
